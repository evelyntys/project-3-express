{{#extends 'base'}}
{{#block 'content'}}
{{#if collections}}
<div class="container" style="overflow:auto">
    <h1>Collection list</h1>
    <div class="d-flex justify-content-end">
        <a href="/details/collection/create" class="btn search">add new collection</a>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Manufacturer</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each collections}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.collection_name}}</td>
                <td>{{this.manufacturer.manufacturer_name}}</td>
                <td>
                    <div class="d-flex">
                        <a href="/details/collection/{{this.id}}/update" class="btn edit-btn btn-sm my-1 mx-1"><i
                                class="bi bi-pencil-square"></i></a>
                        <a href="/details/collection/{{this.id}}/delete" class="btn btn-sm my-1 mx-1 delete-btn"><i
                                class="bi bi-trash3"></i></a>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{/if}}
{{#if manufacturers}}
<div class="container" style="overflow:auto">
    <h1>Manufacturer List</h1>
    <div class="d-flex justify-content-end">
        <a href="/details/manufacturer/create" class="btn search">add new manufacturer</a>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each manufacturers}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.manufacturer_name}}</td>
                <td>
                    <div class="d-flex">
                        <a href="/details/manufacturer/{{this.id}}/update" class="btn edit-btn btn-sm my-1 mx-1"><i
                                class="bi bi-pencil-square"></i></a>
                        <a href="/details/manufacturer/{{this.id}}/delete" class="btn btn-sm my-1 mx-1 delete-btn"><i
                                class="bi bi-trash3"></i></a>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{/if}}
{{/block}}
{{/extends}}